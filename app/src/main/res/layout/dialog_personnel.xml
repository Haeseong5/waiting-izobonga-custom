<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="700dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:background="@drawable/layout_border"
    android:orientation="vertical"
    >
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/personnel_dialog_iv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/personnel_dialog_tv_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/colorGrey"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingVertical="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/personnel_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_left_selector"
                />
            <TextView
                android:id="@+id/child_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center"
                android:textSize="100dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_marginHorizontal="40dp"/>
            <ImageView
                android:id="@+id/child_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_right_selector" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginHorizontal="5dp"
            android:gravity="center_vertical">
            <Button
                android:id="@+id/personnel_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dialog_previous"/>
            <Button
                android:id="@+id/personnel_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dialog_next"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
</LinearLayout>