<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="activity"
            type="com.haeseong.izobonga_custom.views.activities.WaitingActivity" />
        <variable
            name="clickCallback"
            type="android.view.View.OnClickListener" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/waiting_iv_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#F5DFDF"
            android:scaleType="center" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:layout_gravity="end|top"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 웨이팅"
                android:textColor="@color/colorBlue"
                android:textSize="30dp"/>
            <TextView
                android:id="@+id/waiting_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="0 팀"
                android:textColor="@color/colorBlue"
                android:textSize="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/waiting_et_number_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxLength="13"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/privacy_agree"/>
                <CheckBox
                    android:id="@+id/waiting_check_box_agree"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/checkbox_shape"
                    android:button="@android:color/transparent"
                    android:checked="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/btn1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/btn1_click_seletor"
                        android:onClick="@{(v)->clickCallback.onClick(v)}"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="5dp"/>
                    <ImageView
                        android:id="@+id/btn2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/btn4_click_selector"
                        android:onClick="@{(v)->clickCallback.onClick(v)}"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="5dp"/>
                    <ImageView
                        android:id="@+id/btn3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/btn3_click_selector"
                        android:onClick="@{(v)->clickCallback.onClick(v)}"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/btn4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/btn4_click_selector"
                        android:onClick="@{(v)->clickCallback.onClick(v)}"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="5dp"/>
                    <ImageView
                        android:id="@+id/btn5"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/btn5_click_selector"
                        android:onClick="@{(v)->clickCallback.onClick(v)}"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="5dp"/>
                    <ImageView
                        android:id="@+id/btn6"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/btn6_click_seletor"
                        android:onClick="@{(v)->clickCallback.onClick(v)}"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/btn7"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/btn7_click_seletor"
                        android:onClick="@{(v)->clickCallback.onClick(v)}"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="5dp"/>
                    <ImageView
                        android:id="@+id/btn8"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/btn8_click_seletor"
                        android:onClick="@{(v)->clickCallback.onClick(v)}"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="5dp"/>
                    <ImageView
                        android:id="@+id/btn9"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/btn9_click_seletor"
                        android:onClick="@{(v)->clickCallback.onClick(v)}"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/btn_cancel"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/btn_cancel_click_seletor"
                        android:onClick="@{(v)->clickCallback.onClick(v)}"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="5dp"/>
                    <ImageView
                        android:id="@+id/btn0"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/btn0_click_selector"
                        android:onClick="@{(v)->clickCallback.onClick(v)}"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="5dp"/>
                    <ImageView
                        android:id="@+id/btn_input"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/btn_input_click_seletor"
                        android:onClick="@{(v)->clickCallback.onClick(v)}"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>

