<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="activity"
            type="com.haeseong.izobonga_custom.views.activities.WaitingActivity" />
        <variable
            name="clickCallback"
            type="android.view.View.OnClickListener" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/waiting_iv_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone"
            android:background="#F5DFDF"/>
        <VideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <LinearLayout
            android:id="@+id/waiting_count_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/waiting_customer_number"
                android:layout_width="500dp"
                android:layout_height="100dp"
                android:src="@drawable/now_waiting"/>

            <TextView
                android:id="@+id/waiting_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="70sp"
                android:text="0íŒ€"
                android:fontFamily="@font/font_style"
                style="@style/DefaultTextViewStyle"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/key_pad_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/waiting_et_number_box"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:paddingHorizontal="5dp"
                android:background="@drawable/number_edit_text"
                android:text="010-"
                android:textColor="@color/colorWhite"
                android:maxLines="1"
                android:maxLength="13"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/private_permission" />

                <CheckBox
                    android:id="@+id/waiting_check_box_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selector"
                    android:checked="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/btn1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/btn1_click_selector"
                        android:onClick="@{(v)->clickCallback.onClick(v)}"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="5dp"/>
                    <ImageView
                        android:id="@+id/btn2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/btn2_click_selector"
                        android:onClick="@{(v)->clickCallback.onClick(v)}"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="5dp"/>
                    <ImageView
                        android:id="@+id/btn3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/btn3_click_selector"
                        android:onClick="@{(v)->clickCallback.onClick(v)}"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/btn4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/btn4_click_selector"
                        android:onClick="@{(v)->clickCallback.onClick(v)}"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="5dp"/>
                    <ImageView
                        android:id="@+id/btn5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/btn5_click_selector"
                        android:onClick="@{(v)->clickCallback.onClick(v)}"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="5dp"/>
                    <ImageView
                        android:id="@+id/btn6"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/btn6_click_selector"
                        android:onClick="@{(v)->clickCallback.onClick(v)}"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/btn7"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/btn7_click_selector"
                        android:onClick="@{(v)->clickCallback.onClick(v)}"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="5dp"/>
                    <ImageView
                        android:id="@+id/btn8"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/btn8_click_selector"
                        android:onClick="@{(v)->clickCallback.onClick(v)}"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="5dp"/>
                    <ImageView
                        android:id="@+id/btn9"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/btn9_click_selector"
                        android:onClick="@{(v)->clickCallback.onClick(v)}"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/btn_cancel"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/btn_cancel_click_selector"
                        android:onClick="@{(v)->clickCallback.onClick(v)}"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="5dp"/>
                    <ImageView
                        android:id="@+id/btn0"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/btn0_click_selector"
                        android:onClick="@{(v)->clickCallback.onClick(v)}"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="5dp"/>
                    <ImageView
                        android:id="@+id/btn_input"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/btn_input_click_selector"
                        android:onClick="@{(v)->clickCallback.onClick(v)}"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>